@using GwentSite.WebUI.Controllers
@model List<GwentSite.ApiWrapper.Models.IVariationDetail>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cards</title>
</head>
<body>
    <h1>Cards</h1>
    <div class="container">
        <div class="row">
            @foreach(var card in Model)
            {
                <div class="col">
                    <img src="@card.Art.ThumbnailImage" />
                </div>
            }
        </div>
    </div>
</body>
</html>
